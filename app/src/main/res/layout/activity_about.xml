<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_night"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_input_glass"
            android:src="@drawable/ic_back"
            android:scaleType="center"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="About Dreysist"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_dreysist"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dreysist"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Your Personal Voice Assistant"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Voice Commands Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice Commands"
                    android:textColor="@color/accent_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Transaksi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRANSACTION"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;beli pertalite 60000&quot;\n• &quot;bayar listrik 500000 keterangan bulan januari&quot;\n• &quot;beli makan 25000 tanggal 26 agustus 2025&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Jurnal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JOURNAL"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;jurnal hari ini meeting dengan client&quot;\n• &quot;jurnal kerja lembur sampai malam&quot;\n• &quot;catat kegiatan presentasi project&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Pengingat -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REMINDER"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;ingatkan meeting jam 3 sore&quot;\n• &quot;pengingat bayar tagihan jam 10.30&quot;\n• &quot;reminder ambil laundry jam 17:00&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

            <!-- Keywords Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keywords"
                    android:textColor="@color/accent_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaksi: beli, bayar, buat, order, pesan\n\nJurnal: jurnal, catat, kegiatan, aktivitas\n\nPengingat: ingatkan, pengingat, reminder, alarm\n\nTanggal: tanggal [dd] [bulan] [tahun]\n\nWaktu: jam [hh:mm], jam [hh] [pagi/sore/malam]"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
