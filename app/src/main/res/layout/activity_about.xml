<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_night"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_input_glass"
            android:src="@drawable/ic_back"
            android:scaleType="center"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/about_title" 
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_dreysist"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dreysist"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_subtitle"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Language Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_language"
                    android:textColor="@color/accent_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_lang_id"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/glass_input"
                        android:text="Indonesia"
                        android:textColor="@color/text_primary"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/accent_cyan"
                        app:strokeWidth="0dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_lang_en"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/glass_input"
                        android:text="English"
                        android:textColor="@color/text_primary"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/accent_cyan"
                        app:strokeWidth="0dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Voice Commands Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_commands"
                    android:textColor="@color/accent_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Transaksi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_transaction"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;beli pertalite 60000&quot;\n• &quot;bayar listrik 500000 keterangan bulan januari&quot;\n• &quot;beli makan 25000 tanggal 26 agustus 2025&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Jurnal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_journal"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;jurnal hari ini meeting dengan client&quot;\n• &quot;curhat aku hari ini capek banget&quot;\n• &quot;catat kegiatan presentasi project&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Pengingat -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_reminder"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;ingatkan meeting jam 3 sore&quot;\n• &quot;pengingat bayar tagihan jam 10.30&quot;\n• &quot;reminder ambil laundry besok jam 9 pagi&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Notes -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_notes"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;simpan password instagram abc123&quot;\n• &quot;ingat pin ATM 123456&quot;\n• &quot;catat email baru john@email.com&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

            <!-- REMEMBER (Query) Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ask_questions"
                    android:textColor="@color/accent_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Pengeluaran -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_spending"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;berapa total pengeluaran?&quot;\n• &quot;pengeluaran hari ini berapa?&quot;\n• &quot;pengeluaran bulan ini berapa?&quot;\n• &quot;transaksi terakhir apa?&quot;\n• &quot;transaksi termahal apa?&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Jurnal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JOURNAL"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;jurnal terakhir apa?&quot;\n• &quot;hari ini ngapain aja?&quot;\n• &quot;ada berapa jurnal?&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Reminder -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REMINDER"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;ada pengingat aktif?&quot;\n• &quot;berapa pengingat yang aktif?&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Pencarian -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_search"
                    android:textColor="#00D4FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• &quot;pernah beli kopi?&quot;\n• &quot;cari transaksi makan&quot;\n• &quot;cari catatan password&quot;\n• &quot;cari jurnal meeting&quot;"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

            <!-- Keywords Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/keywords"
                    android:textColor="@color/accent_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction: beli, bayar, belanja, jajan, ngopi\n\nJournal: jurnal, curhat, hari ini aku, catat kegiatan\n\nReminder: ingatkan, pengingat, reminder, jangan lupa\n\nNotes: simpan, ingat ini, catat ini, password, pin\n\nQuestions: berapa, apa, kapan, cari, ada"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
