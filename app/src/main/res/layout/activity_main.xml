<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_night"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="28dp"
        android:paddingTop="80dp"
        android:paddingBottom="48dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's your command,"
            android:textColor="#B0B8C9"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.02" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master?"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="4dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the button to start"
            android:textColor="#5A6380"
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif" />

        <!-- Voice Button Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Ripple Circles -->
            <View
                android:id="@+id/ripple_1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_ripple_circle" />

            <View
                android:id="@+id/ripple_2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_ripple_circle" />

            <View
                android:id="@+id/ripple_3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_ripple_circle" />

            <!-- Voice Button -->
            <FrameLayout
                android:id="@+id/voice_button"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_voice_button"
                android:elevation="0dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_dreysist"
                    android:contentDescription="Voice Input" />

            </FrameLayout>

        </FrameLayout>

        <!-- Recent Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="RECENT"
                    android:textColor="#4A5568"
                    android:textSize="11sp"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/btn_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="#00D4FF"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recent_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/text_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No data yet"
                android:textColor="#4A5568"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- FAB Menu Overlay -->
    <View
        android:id="@+id/fab_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- FAB Menu Container -->
    <LinearLayout
        android:id="@+id/fab_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone">

        <!-- About -->
        <LinearLayout
            android:id="@+id/fab_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="#B0B8C9"
                android:textSize="14sp"
                android:background="@drawable/bg_fab_label"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_mini">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_info"
                    android:contentDescription="About" />
            </FrameLayout>

        </LinearLayout>

        <!-- Backup -->
        <LinearLayout
            android:id="@+id/fab_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backup"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:background="@drawable/bg_fab_label"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_mini">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_backup"
                    android:contentDescription="Backup" />
            </FrameLayout>

        </LinearLayout>

        <!-- Reminder -->
        <LinearLayout
            android:id="@+id/fab_pengingat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder"
                android:textColor="#FF6B6B"
                android:textSize="14sp"
                android:background="@drawable/bg_fab_label"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_reminder">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="Reminder" />
            </FrameLayout>

        </LinearLayout>

        <!-- Journal -->
        <LinearLayout
            android:id="@+id/fab_jurnal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal"
                android:textColor="#FFD93D"
                android:textSize="14sp"
                android:background="@drawable/bg_fab_label"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_journal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_journal"
                    android:contentDescription="Journal" />
            </FrameLayout>

        </LinearLayout>

        <!-- Transaction -->
        <LinearLayout
            android:id="@+id/fab_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction"
                android:textColor="#00D4FF"
                android:textSize="14sp"
                android:background="@drawable/bg_fab_label"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="12dp" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_transaksi">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_transaksi"
                    android:contentDescription="Transaction" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Main FAB -->
    <FrameLayout
        android:id="@+id/fab_main"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_fab_main"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/fab_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu" />

    </FrameLayout>

</FrameLayout>