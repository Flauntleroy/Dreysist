<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_glass_card"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Transaksi"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Keperluan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keperluan"
        android:textColor="@color/text_hint"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_keperluan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input_glass"
        android:paddingHorizontal="12dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:hint="Masukkan keperluan"
        android:inputType="text"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />

    <!-- Total -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total (Rp)"
        android:textColor="@color/text_hint"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_total"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input_glass"
        android:paddingHorizontal="12dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:hint="0"
        android:inputType="number"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />

    <!-- Keterangan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan"
        android:textColor="@color/text_hint"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_keterangan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_input_glass"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        android:hint="Keterangan (opsional)"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />

    <!-- Tanggal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textColor="@color/text_hint"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/accent_cyan"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_pick_date"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_input_glass"
            android:text="Pilih"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_glass"
            android:text="Batal"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_accent"
            android:text="Simpan"
            android:textColor="@color/night_sky_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
