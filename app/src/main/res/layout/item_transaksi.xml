<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_item_card"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <!-- Category Icon -->
    <ImageView
        android:id="@+id/img_category"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:background="@drawable/bg_input_glass"
        android:src="@drawable/ic_category_other"
        android:layout_marginEnd="14dp" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_keperluan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Makan siang" />

        <TextView
            android:id="@+id/text_view_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            tools:text="01 Januari 2026, 12:30" />

    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/text_view_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_cyan"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Rp 25.000" />

</LinearLayout>
