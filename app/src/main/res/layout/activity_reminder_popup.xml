<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_gradient_night"
    android:padding="32dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_dreysist"
        android:layout_marginBottom="32dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengingat"
        android:textColor="@color/accent_cyan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Content Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_glass_card"
        android:padding="24dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.4"
            android:gravity="center" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Snooze Button -->
        <Button
            android:id="@+id/btn_snooze"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:background="@drawable/bg_input_glass"
            android:text="Snooze 30m"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp" />

        <!-- Complete Button -->
        <Button
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_accent"
            android:text="Complete"
            android:textColor="@color/night_sky_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
