<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_night"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_input_glass"
            android:src="@drawable/ic_back"
            android:scaleType="center"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Insights"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Swipeable Time Period Cards -->
            <HorizontalScrollView
                android:id="@+id/scroll_periods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- TODAY Card -->
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_glass_card"
                        android:padding="20dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textColor="@color/accent_cyan"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/text_today_spending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textColor="@color/text_primary"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_spending_insight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Belum ada pengeluaran hari ini."
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/text_today_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 transaksi • 0 jurnal • 0 pengingat"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>

                    <!-- THIS WEEK Card -->
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_glass_card"
                        android:padding="20dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This Week"
                            android:textColor="@color/accent_cyan"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/text_week_spending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textColor="@color/text_primary"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_week_insight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minggu ini belum ada data."
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/text_week_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 transaksi"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>

                    <!-- THIS MONTH Card -->
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_glass_card"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This Month"
                            android:textColor="@color/accent_cyan"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/text_month_spending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textColor="@color/text_primary"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_month_insight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bulan ini belum ada data."
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/text_month_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 transaksi"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Swipe Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <View
                    android:id="@+id/indicator_today"
                    android:layout_width="20dp"
                    android:layout_height="4dp"
                    android:background="@color/accent_cyan"
                    android:layout_marginHorizontal="3dp" />

                <View
                    android:id="@+id/indicator_week"
                    android:layout_width="8dp"
                    android:layout_height="4dp"
                    android:background="@color/text_hint"
                    android:layout_marginHorizontal="3dp" />

                <View
                    android:id="@+id/indicator_month"
                    android:layout_width="8dp"
                    android:layout_height="4dp"
                    android:background="@color/text_hint"
                    android:layout_marginHorizontal="3dp" />

            </LinearLayout>

            <!-- Narrative Insights Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ringkasan"
                    android:textColor="@color/text_hint"
                    android:textSize="11sp"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <!-- Category Narrative -->
                <TextView
                    android:id="@+id/text_category_narrative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Belum ada data kategori."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- Top Categories Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="20dp"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Categories"
                    android:textColor="@color/accent_cyan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/container_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
