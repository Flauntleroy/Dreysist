<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Force Dark Mode -->
    <style name="Base.Theme.DreyAssist" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/accent_cyan</item>
        <item name="colorPrimaryVariant">@color/accent_cyan_dim</item>
        <item name="colorOnPrimary">@color/night_sky_dark</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/night_sky_dark</item>
        <item name="colorSurface">@color/night_sky_mid</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/night_sky_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Full screen -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.DreyAssist" parent="Base.Theme.DreyAssist" />
</resources>