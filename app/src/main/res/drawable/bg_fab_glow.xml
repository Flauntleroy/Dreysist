<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A00D4FF" />
            <size android:width="88dp" android:height="88dp" />
        </shape>
    </item>
    <!-- Main FAB background -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#00D4FF"
                android:endColor="#0099CC" />
        </shape>
    </item>
</layer-list>
